<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jiahanglee.babyship.dao.TeacherDao" >
	<sql id="BASE_TABLE">
		teacher
	</sql>

	<sql id="BASE_COLUMN">
		id,name,url,description
	</sql>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.jiahanglee.babyship.entity.Teacher">
		INSERT INTO
		<include refid="BASE_TABLE"/>
		<trim prefix="(" suffix=")" suffixOverrides=",">
			name,url,description
			<!--<if test="name != null">-->
				<!--phone,-->
			<!--</if>-->
		</trim>
		<trim prefix="VALUES(" suffix=")" suffixOverrides=",">
			#{name, jdbcType=VARCHAR},#{url, jdbcType=VARCHAR},#{description, jdbcType=VARCHAR}
			<!--<if test="phone != null">-->
				<!--#{phone, jdbcType=VARCHAR},-->
			<!--</if>-->
		</trim>
	</insert>

	<select id="selectTeachers" resultType="com.jiahanglee.babyship.entity.Teacher">
		SELECT
		<include refid="BASE_COLUMN"/>
		FROM
		<include refid="BASE_TABLE"/>
		ORDER BY id
	</select>

	<delete id="delete" parameterType="Integer">
		delete From teacher WHERE id = #{id}
	</delete>

	<update id = "update"   parameterType = "com.jiahanglee.babyship.entity.Teacher">
		update teacher
		<set>
			<if test="name!=null">
				name = #{name},
			</if>
			<if test="description!=null">
				description = #{description},
			</if>
			<if test="url!=null">
				url = #{url}
			</if>
		</set>
        WHERE id = #{id}
	</update>
</mapper>
